FROM --platform=linux/amd64 ghcr.io/cross-rs/armv7-unknown-linux-gnueabihf:main@sha256:120c81ba0da099fb46fc6032baddb2bb038770e39335b104a80aff1425210451

RUN dpkg --add-architecture armhf && \
    DEBIAN_FRONTEND=noninteractive apt-get \
      -o Acquire::CompressionTypes::Order::=gz \
      update && \
    DEBIAN_FRONTEND=noninteractive apt-get \
      -o Acquire::CompressionTypes::Order::=gz \
      -y \
      --no-install-recommends \
      install \
        libpango-1.0-0:armhf \
        libpango1.0-dev:armhf \
        libgtk-3-dev:armhf
